                        "materiaux_outils": [],
                        "etapes": [
                            {
                                "titre": "Vous pouvez mettre en place un self-service en laissant les convives se servir directement dans les bacs secondaires, ou transiter par des bacs intermédiaires",
                                "sous_etapes": []
